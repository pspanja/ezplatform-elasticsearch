{
    "dynamic_templates": [
        {
            "identifiers": {
                "path_match": "*_identifier",
                "match_mapping_type": "string",
                "mapping": {
                    "type": "text"
                }
            }
        },
        {
            "integers": {
                "path_match": "*_long",
                "match_mapping_type": "long",
                "mapping": {
                    "type": "long"
                }
            }
        },
        {
            "strings": {
                "path_match": "*_text",
                "match_mapping_type": "string",
                "mapping": {
                    "type": "text"
                }
            }
        }
    ]
}
