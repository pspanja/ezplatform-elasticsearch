<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true">
    <testsuites>
        <testsuite name="Integration tests">
            <file>./tests/Integration/Http/ClientTest.php</file>
            <file>./tests/Integration/ConfiguratorTest.php</file>
            <file>./tests/Integration/GatewayTest.php</file>
            <file>./tests/Integration/HandlerTest.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>
